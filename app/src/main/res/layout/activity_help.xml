<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/retour"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_cross" />

        </androidx.appcompat.widget.Toolbar>


        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="150dp"
            android:layout_height="164dp"
            android:layout_gravity="center"
            android:src="@mipmap/invoice" />

        <TextView
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:padding="25dp"
            android:text="All about how to use this app"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="1-Create an account if you don't have one yet by clicking on registration."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp"
            android:padding="20dp"/>

        <ImageView
            android:id="@+id/logo_connexion"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@mipmap/inscription"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2-Log in to your account, providing your credentials to access your private area."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp"
            android:id="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            />

        <ImageView
            android:id="@+id/inscription"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@mipmap/connexion"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="3-And then it is won, you should manage easily and quickly the payment of your invoices without moving according to the functionalities which this application offer you!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp"
            android:padding="20dp"/>

    </LinearLayout>
</ScrollView>